<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF6600"
                android:endColor="#FF0000"
                android:angle="0"
                />
            <corners
                android:radius="20dp"
                />
            <stroke
                android:width="0px"
                android:color="#ff4020"/>
            <size
                android:height="30dp"
                />
        </shape>
    </item>
</layer-list>